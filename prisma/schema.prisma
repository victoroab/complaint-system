// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id               String          @id @default(cuid())
  firstname        String
  lastname         String
  email            String          @unique
  matricNo         String          @unique
  hall             Hall
  picture          StudentProfile?
  roomNumber       String
  complaint        Complaints[]
  studentProfileId String

  @@index([matricNo, email])
}

model HallOfficer {
  id        String              @id @default(cuid())
  firstname String
  lastname  String
  email     String              @unique
  picture   HallOfficerProfile?
  staffNo   String              @unique
  hall      Hall

  @@index([staffNo, email])
}

model Personnel {
  id         String            @id @default(cuid())
  firstname  String
  lastname   String
  email      String            @unique
  picture    PersonnelProfile?
  category   Category
  complaints Complaints[]

  @@index([email])
}

model Complaints {
  id          String     @id @default(cuid())
  hall        Hall
  student     Student    @relation(fields: [matricNo], references: [matricNo])
  matricNo    String
  category    Category
  roomNumber  String?
  issue       String
  fixed       Boolean    @default(false)
  inspected   Boolean    @default(false)
  resolved    Boolean    @default(false)
  handler     Personnel? @relation(fields: [personnelId], references: [id])
  personnelId String?
  createdAt   DateTime   @default(now())

  @@index([hall, category])
}

model StudentProfile {
  id        String  @id @default(cuid())
  student   Student @relation(fields: [studentId], references: [id])
  studentId String  @unique
  url       String?
}

model HallOfficerProfile {
  id            String      @id @default(cuid())
  hallOfficer   HallOfficer @relation(fields: [hallOfficerId], references: [id])
  hallOfficerId String      @unique
  url           String?
}

model PersonnelProfile {
  id          String    @id @default(cuid())
  personnel   Personnel @relation(fields: [personnelId], references: [id])
  personnelId String    @unique
  url         String?
}

enum Hall {
  PETER
  PAUL
  JOHN
  JOSEPH
  DANIEL
  ESTHER
  LYDIA
  DEBORAH
  MARY
  DORCAS
}

enum Category {
  ELECTRICAL
  FURNITURE
  PLUMBING
}
